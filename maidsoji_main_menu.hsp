	return


; 操作キャラの変更
*change_player
	switch game_info(GAME_INFO_SELECTPLAYER)
	case 0
		game_info(GAME_INFO_SELECTPLAYER) = 6
		swbreak
	case 6
		game_info(GAME_INFO_SELECTPLAYER) = 7
		swbreak
	case 7
		game_info(GAME_INFO_SELECTPLAYER) = 0
		swbreak
	default
		game_info(GAME_INFO_SELECTPLAYER) = 0
		swbreak
	swend
	goto *select_player
		
; 記録の一覧を表示
*record_view
	color 255,240,245
	boxf
	color 0,0,0
	font "",24
	pos 25,20
	mes "スコアの記録"
	font "",12
	pos 20,60
	mes stageset_desc(game_info(GAME_INFO_SELECTSTEGESET),0)	; ステージセットの名前
	pos 20,80
	mes strf("順位    キャラ        スコア レベル  バージョン")
	record_rank = 1
	for i,0,RECORD_MAX
		if record_info(i,RECORD_INFO_SCORE) <= 0 : _break
		if record_info(i,RECORD_INFO_STEGESET) ! game_info(GAME_INFO_SELECTSTEGESET) : _continue
		y = 80 + record_rank * 12
		pos 20,y
		mes strf("  %2d  %s  %8d   %4d    v%d.%d.%d",record_rank,defchar_desc(record_info(i,RECORD_INFO_SELECTPLAYER),0),record_info(i,RECORD_INFO_SCORE), record_info(i,RECORD_INFO_LEVEL), record_info(i,RECORD_INFO_VER_MAJOR), record_info(i,RECORD_INFO_VER_MINOR), record_info(i,RECORD_INFO_VER_PATCH))
		record_rank += 1
		if record_rank >= 30 : _break
	next
	
	pos 240,450
	if input_button_display = 0 :button goto "タイトルに戻る",*return_opening
	
	input_button_display = 1
	return

