	switch game_info(GAME_INFO_SELECTSTEGESET)
	case 1
		game_info(GAME_INFO_SELECTSTEGESET) = 2
		swbreak
	case 2
		game_info(GAME_INFO_SELECTSTEGESET) = 1
		swbreak
	default
		game_info(GAME_INFO_SELECTSTEGESET) = 1
		swbreak
	swend

