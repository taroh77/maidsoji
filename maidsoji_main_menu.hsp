	if defchar_info(charid,DEFCHAR_INFO_PASSIVE1) > 0{
		color 176,196,222
		line 40,342,250,342
		color 0,0,0
		pos 30,350
		mes strf("パッシブスキル：%s",passive_desc(defchar_info(charid,DEFCHAR_INFO_PASSIVE1),0))
		mes strf("　%s",passive_desc(defchar_info(charid,DEFCHAR_INFO_PASSIVE1),1))
		mes strf("　%s",passive_desc(defchar_info(charid,DEFCHAR_INFO_PASSIVE1),2))
	
