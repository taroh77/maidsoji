	boxf
	color 0,0,0
	pos 25,20
	font "",12
	mes "部屋の選択"
	font "",24
	mes stageset_desc(stagesetid,0)
	font "",12

	pos 10,80
	mes stageset_desc(stagesetid,1)

	pos 10,110
	mes stageset_desc(stagesetid,2)
	mes stageset_desc(stagesetid,3)
	mes stageset_desc(stagesetid,4)

	if stagesetid = 1 : defcharlist = 1,2,3,4,5
	if stagesetid = 2 : defcharlist = 8,9,10,11,12

	pos 10,160
	mes "登場キャラクター"

	for i,0,5
		if defcharlist(i) <= 0 : _continue
		es_put 30,190+i*50,defchar_sp(defcharlist(i),DEFCHAR_SP_STATIC),$3ff,65536,65536,0
		pos 10,223+i*50 : mes defchar_desc(defcharlist(i),0)
		pos 80,195+i*50 : mes defchar_desc(defcharlist(i),1)
		pos 80,207+i*50 : mes defchar_desc(defcharlist(i),2)
	next
	
